# Корневой файл EditorConfig
root = true

# Для всех файлов используем unix-совместимые переносы строк
[*]
indent_style = tab
charset = utf-8
end_of_line = auto
insert_final_newline = false
indent_size = 4

[*.{md,txt}]
indent_style = space
indent_size = 1
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,css}]
quote_type = single

[*.bat]
end_of_line = crlf

[*.{yaml,yml}]
indent_style = space
indent_size = 2
